<SwiperLoop @items={{@cards}} @currentIndex={{currentIndex}} as |cardContent|>
  <FlipCard @flipped={{ cardContent.isFlipped }} onclick={{action "cardClick" cardContent}} as |card|>
    <card.front>
      {{cardContent.front}}
    </card.front>
    <card.back>
      {{cardContent.back}}
    </card.back>
  </FlipCard>
</SwiperLoop>