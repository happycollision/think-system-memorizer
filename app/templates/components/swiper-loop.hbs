<SwiperContainer class="swiper-height overflow-hidden" @currentSlide={{currentIndex}} @keyboard={{true}} as
  |container|>
  {{#each @items key="id" as |item index|}}
    {{#if (and (gt index (sub currentIndex 2)) (lt index (add currentIndex 2)))}}
      <container.slide class="border-box">
        {{yield item}}
      </container.slide>
    {{else}}
      <container.slide class="border-box">
        {{!-- blank render --}}
      </container.slide>
    {{/if}}
  {{/each}}
</SwiperContainer>